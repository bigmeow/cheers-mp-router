{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module":"esnext",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
        "miniprogram-api-typings"
    ]
  },
  "include": [
    "src"
  ]
}
